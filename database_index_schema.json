{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/CLIMB-TRE/zeus/refs/heads/main/database_index_schema.json",
    "title": "mSCAPE Viral Alignment Database Index Schema",
    "description": "Structural and type validation for the mSCAPE viral alignment database index JSON.",
    "type": "object",
    "required": [
        "title",
        "index_version",
        "database_schema",
        "databases",
        "database_descriptions",
        "data"
    ],
    "properties": {
        "title": {
            "type": "string"
        },
        "index_version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
        },
        "database_schema": {
            "type": "string",
            "format": "uri"
        },
        "databases": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "pattern": "^[a-zA-Z0-9_\\-]+$"
            }
        },
        "database_descriptions": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9_\\-]+$": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "data": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9_\\-]+$": {
                    "type": "object",
                    "required": [
                        "latest_version",
                        "latest_version_date",
                        "versions"
                    ],
                    "properties": {
                        "latest_version": {
                            "type": "string",
                            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
                        },
                        "latest_version_date": {
                            "type": "string",
                            "format": "date"
                        },
                        "versions": {
                            "type": "object",
                            "minProperties": 1,
                            "patternProperties": {
                                "^[0-9]+\\.[0-9]+\\.[0-9]+$": {
                                    "type": "object",
                                    "required": [
                                        "date",
                                        "description",
                                        "taxonomy_version",
                                        "fasta_uri",
                                        "fasta_md5",
                                        "metadata_uri",
                                        "metadata_md5"
                                    ],
                                    "properties": {
                                        "date": {
                                            "type": "string",
                                            "format": "date"
                                        },
                                        "description": {
                                            "type": "string"
                                        },
                                        "methods_summary": {
                                            "type": "string"
                                        },
                                        "taxonomy_version": {
                                            "type": "string",
                                            "format": "date"
                                        },
                                        "fasta_uri": {
                                            "type": "string",
                                            "format": "uri"
                                        },
                                        "fasta_md5": {
                                            "type": "string",
                                            "pattern": "^[a-fA-F0-9]{32}$"
                                        },
                                        "metadata_uri": {
                                            "type": "string",
                                            "format": "uri"
                                        },
                                        "metadata_md5": {
                                            "type": "string",
                                            "pattern": "^[a-fA-F0-9]{32}$"
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}